services:
  postgresql18:
    image: postgres:18
    container_name: postgresql18-simple-benchmark
    environment:
      POSTGRES_USER: ${DB_USER}
      POSTGRES_PASSWORD: ${DB_PASSWD}
      POSTGRES_DB: ${DB_NAME}
    ports:
      - "${DB_PORT:-5432}:5432"
    volumes:
      - postgresql18-simple-benchmark-data:/var/lib/postgresql
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U ${DB_USER} -d ${DB_NAME}"]
      interval: 10s
      timeout: 5s
      retries: 5

  sysbench:
    image: severalnines/sysbench
    container_name: sysbench
    depends_on:
      postgresql18:
        condition: service_healthy
    environment:
      DB_USER: ${DB_USER}
      DB_PASSWD: ${DB_PASSWD}
      DB_NAME: ${DB_NAME}
      DB_HOST: postgresql18
      DB_PORT: ${DB_PORT}
    command: tail -f /dev/null

volumes:
  postgresql18-simple-benchmark-data:
